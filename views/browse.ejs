<html>
<head>
	<link rel="stylesheet" href="/css/styles.css">
</head>

<body>
	<%- include('./partials/header.ejs') %>

	<h1>Browsing <%= total %> Posts...</h1>
	<ul class="listings">
		<% if (page > 1) { %>
                	<a href="/browse?page=<%= page - 1 %>&limit=10">Last Page</a>
                <% } %>
                <% if (page < (total/limit)) { %>
                    	<a href="/browse?page=<%= page + 1 %>&limit=10">Next Page</a>
                <% } %>
                <% for (let i = 0; i < posts.length; i++) { %>
                	<li class="listing-tile">
                            <img class="listing-image" src="<%= posts[i].image %>">
                        	<div class="listing-details">
                            		<h2><%= posts[i].title %></h2>
                            		<p><%= posts[i].description %></p>
                            		<p>$<%= posts[i].currentBid %></p>
					<p>(<%= posts[i].tags %>)</p>
                        	</div>
                    	</li>
                <% } %>
                <% if (page > 1) { %>
			<a href="/browse?page=<%= page - 1 %>&limit=10">Last Page</a>
                <% } %>
                <% if (page < (total/limit)) { %>
			<a href="/browse?page=<%= page + 1 %>&limit=10">Next Page</a>
                <% } %>
	</ul>
	
	<%- include('./partials/footer.ejs') %>
</body>
</html>


